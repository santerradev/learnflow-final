</div>
        </main>
    </div>

    <!-- Modal de Criar Curso -->
    <div id="modal-criar-curso" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto" onclick="event.stopPropagation()">
            <!-- Header do Modal -->
            <div class="sticky top-0 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 px-6 py-4 flex justify-between items-center">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Criar Novo Curso</h3>
                <button onclick="closeCreateCourseModal()" 
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <!-- Formulário -->
            <form action="/cursos/criar" method="POST" enctype="multipart/form-data" class="p-6 space-y-6">
                <!-- Título -->
                <div>
                    <label for="titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fa-solid fa-graduation-cap mr-2 text-teal-600"></i>
                        Título do Curso *
                    </label>
                    <input type="text" 
                           id="titulo" 
                           name="titulo" 
                           required 
                           maxlength="100"
                           placeholder="Ex: Introdução ao Banco de Dados"
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                </div>

                <!-- Descrição -->
                <div>
                    <label for="descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fa-solid fa-align-left mr-2 text-teal-600"></i>
                        Descrição *
                    </label>
                    <textarea id="descricao" 
                              name="descricao" 
                              required 
                              rows="4"
                              maxlength="500"
                              placeholder="Descreva o conteúdo e objetivos do curso..."
                              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"></textarea>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        Máximo 500 caracteres
                    </p>
                </div>

                <!-- Matéria e Imagem na mesma linha -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Matéria -->
                    <div>
                        <label for="materia" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            <i class="fa-solid fa-book mr-2 text-teal-600"></i>
                            Matéria *
                        </label>
                        <input type="text" 
                               id="materia" 
                               name="materia" 
                               required
                               maxlength="50"
                               placeholder="Ex: Banco de Dados"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                    </div>

                    <!-- Imagem do Curso -->
                    <div>
                        <label for="imagem_curso" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            <i class="fa-solid fa-image mr-2 text-teal-600"></i>
                            Imagem do Curso
                        </label>
                        <input type="file" 
                               id="imagem_curso" 
                               name="imagem_curso" 
                               accept="image/*"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-teal-50 file:text-teal-700 hover:file:bg-teal-100 dark:file:bg-teal-900 dark:file:text-teal-300">
                    </div>
                </div>

                <!-- Senha de Acesso (Opcional) -->
                <div>
                    <label for="senha_acesso" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fa-solid fa-lock mr-2 text-teal-600"></i>
                        Senha de Acesso (Opcional)
                    </label>
                    <input type="text" 
                           id="senha_acesso" 
                           name="senha_acesso"
                           maxlength="5"
                           pattern="[a-zA-Z0-9]{0,5}"
                           placeholder="Deixe vazio para curso aberto"
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        Máximo 5 caracteres alfanuméricos (sem espaços)
                    </p>
                </div>

                <!-- Botões -->
                <div class="flex gap-3 pt-4">
                    <button type="button" 
                            onclick="closeCreateCourseModal()"
                            class="flex-1 px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold rounded-lg transition duration-200">
                        Cancelar
                    </button>
                    <button type="submit" 
                            class="flex-1 px-6 py-3 bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 text-white font-semibold rounded-lg transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]">
                        <i class="fa-solid fa-plus mr-2"></i>
                        Criar Curso
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/theme.js"></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/modals.js"></script>
    <script src="/js/popups.js"></script>
    
    <script>
        // Toggle user menu dropdown
        document.getElementById('user-menu-button')?.addEventListener('click', (e) => {
            e.stopPropagation();
            document.getElementById('user-menu-dropdown').classList.toggle('hidden');
        });

        // Fechar ao clicar fora
        document.addEventListener('click', (e) => {
            const userMenuButton = document.getElementById('user-menu-button');
            const userMenuDropdown = document.getElementById('user-menu-dropdown');
            
            if (userMenuButton && userMenuDropdown && 
                !userMenuButton.contains(e.target) && 
                !userMenuDropdown.contains(e.target)) {
                userMenuDropdown.classList.add('hidden');
            }
        });

        // Funções do Modal de Criar Curso
        function openCreateCourseModal() {
            document.getElementById('modal-criar-curso').classList.remove('hidden');
        }

        function closeCreateCourseModal() {
            document.getElementById('modal-criar-curso').classList.add('hidden');
        }

        // Fechar modal ao clicar fora
        document.getElementById('modal-criar-curso')?.addEventListener('click', closeCreateCourseModal);
    </script>

</body>
