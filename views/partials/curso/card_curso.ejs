<!-- file: views/partials/curso/card_curso.ejs -->

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition group">
    <!-- Capa do Curso -->
    <div class="relative h-48 bg-gray-200 dark:bg-gray-700 overflow-hidden">
        <% if (curso.capa_curso) { %>
            <img src="/uploads/images/<%= curso.capa_curso %>" 
                 alt="<%= curso.titulo %>" 
                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
        <% } else { %>
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-teal-500 to-teal-600">
                <i class="fa-solid fa-book text-white text-5xl"></i>
            </div>
        <% } %>
        
        <!-- Badge de senha (se tiver) -->
        <% if (curso.senha_acesso && !curso.estaInscrito) { %>
            <div class="absolute top-3 right-3">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                    <i class="fa-solid fa-lock mr-1"></i> Protegido
                </span>
            </div>
        <% } %>
    </div>
    
    <!-- Conteúdo -->
    <div class="p-5">
        <!-- Título -->
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2 min-h-[3.5rem]">
            <%= curso.titulo %>
        </h3>
        
        <!-- Matéria -->
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
            <i class="fa-solid fa-tag mr-1"></i> <%= curso.materia %>
        </p>
        
        <!-- Professor -->
        <div class="flex items-center gap-2 mb-4">
            <% if (curso.professor?.foto_perfil) { %>
                <img src="/uploads/images/<%= curso.professor.foto_perfil %>" 
                     alt="<%= curso.professor.nome %>" 
                     class="w-6 h-6 rounded-full object-cover">
            <% } else { %>
                <div class="w-6 h-6 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
                    <i class="fa-solid fa-user text-xs text-gray-500 dark:text-gray-400"></i>
                </div>
            <% } %>
            <span class="text-sm text-gray-600 dark:text-gray-400 truncate">
                <%= curso.professor?.nome || 'Professor' %>
            </span>
        </div>
        
        <!-- Estatísticas (se disponível) -->
        <% if (curso._count) { %>
            <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400 mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
                <span>
                    <i class="fa-solid fa-users mr-1"></i> <%= curso._count.inscricoes || 0 %>
                </span>
                <span>
                    <i class="fa-solid fa-video mr-1"></i> <%= curso._count.aulas || 0 %>
                </span>
                <span>
                    <i class="fa-solid fa-clipboard-check mr-1"></i> <%= curso._count.atividades || 0 %>
                </span>
            </div>
        <% } %>
        
        <!-- Botão de Ação -->
        <% if (curso.estaInscrito) { %>
            <!-- Aluno inscrito - Botão Acessar -->
            <a href="/cursos/<%= curso.id %>/mural" 
               class="block w-full py-2.5 bg-teal-600 hover:bg-teal-700 text-white text-center rounded-lg font-medium transition">
                <i class="fa-solid fa-arrow-right mr-2"></i> Acessar Curso
            </a>
        <% } else if (usuario && (usuario.tipo === 'professor' || usuario.tipo === 'administrador') && curso.usuario_id === usuario.id) { %>
            <!-- Professor dono - Botão Gerenciar -->
            <a href="/cursos/<%= curso.id %>/mural" 
               class="block w-full py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-center rounded-lg font-medium transition">
                <i class="fa-solid fa-cog mr-2"></i> Gerenciar
            </a>
        <% } else { %>
            <!-- Não inscrito - Botão Inscrever -->
            <button onclick="inscreverNoCurso(<%= curso.id %>, <%= curso.senha_acesso ? 'true' : 'false' %>)" 
                    id="btn-inscrever-<%= curso.id %>"
                    class="w-full py-2.5 bg-teal-600 hover:bg-teal-700 text-white rounded-lg font-medium transition">
                <i class="fa-solid fa-user-plus mr-2"></i> Inscrever-se
            </button>
        <% } %>
    </div>
</div>

<!-- Modal de Senha (se necessário) -->
<% if (!curso.estaInscrito && curso.senha_acesso && usuario && usuario.tipo !== 'professor' && usuario.tipo !== 'administrador') { %>
<div id="modal-senha-<%= curso.id %>" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl w-full max-w-md p-6">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            Senha de Acesso Necessária
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
            Este curso requer uma senha de acesso para inscrição.
        </p>
        <form id="form-senha-<%= curso.id %>" onsubmit="enviarInscricao(event, <%= curso.id %>)">
            <input type="password" 
                   id="senha-curso-<%= curso.id %>"
                   maxlength="5"
                   placeholder="Digite a senha (máx. 5 caracteres)"
                   required
                   class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white mb-4 focus:outline-none focus:ring-2 focus:ring-teal-500">
            <div class="flex gap-3">
                <button type="button" 
                        onclick="fecharModalSenha(<%= curso.id %>)"
                        class="flex-1 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                    Cancelar
                </button>
                <button type="submit" 
                        class="flex-1 py-2 bg-teal-600 hover:bg-teal-700 text-white rounded-lg transition">
                    Confirmar
                </button>
            </div>
        </form>
    </div>
</div>
<% } %> 