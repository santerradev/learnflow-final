<!-- file: views/partials/curso/header_curso.ejs -->
<!-- Banner/Header com informações do curso -->

<div class="bg-teal-600 dark:bg-teal-700 text-white shadow-lg">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 md:px-8 py-8">
        <div class="flex items-start justify-between">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold"><%= curso.titulo %></h1>
                <p class="text-xl text-teal-100 mt-1"><%= curso.materia %></p>
                <div class="flex items-center mt-3 text-teal-200">
                    <% if (curso.professor.foto_perfil) { %>
                        <img src="/uploads/images/<%= curso.professor.foto_perfil %>" 
                             alt="<%= curso.professor.nome %>" 
                             class="h-8 w-8 rounded-full object-cover mr-2">
                    <% } else { %>
                        <span class="h-8 w-8 rounded-full bg-teal-500 flex items-center justify-center text-white text-sm font-semibold mr-2">
                            <%= curso.professor.nome.charAt(0).toUpperCase() %>
                        </span>
                    <% } %>
                    <span>Prof. <%= curso.professor.nome %></span>
                </div>
            </div>
            
            <% if (eDonoCurso) { %>
                <div class="flex items-center gap-2">
                    <a href="/cursos/<%= curso.id %>/editar" 
                       class="flex items-center gap-2 px-3 py-2 bg-teal-500 hover:bg-teal-400 rounded-lg text-sm font-medium transition">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <span class="hidden sm:inline">Editar</span>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>