<div id="modal-criar-material" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Novo Material</h2>
                <button type="button" onclick="toggleModal('modal-criar-material', false)" 
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                    <i class="fa-solid fa-times text-xl"></i>
                </button>
            </div>
            
            <!-- Formulário -->
            <form id="form-criar-material" enctype="multipart/form-data" class="space-y-4">
                <div>
                    <label for="material-titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Título do Material *
                    </label>
                    <input type="text" 
                           id="material-titulo" 
                           name="titulo"
                           required
                           placeholder="Ex: Slides da Aula 1"
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                </div>
                
                <div>
                    <label for="material-descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Descrição (opcional)
                    </label>
                    <textarea id="material-descricao" 
                              name="descricao"
                              rows="2"
                              placeholder="Breve descrição do material..."
                              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 resize-none"></textarea>
                </div>
                
                <div>
                    <label for="material-lista" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Lista (opcional)
                    </label>
                    <select id="material-lista" 
                            name="lista_id"
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                        <option value="">Sem lista</option>
                    </select>
                </div>
                
                <!-- Upload de Arquivo -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Arquivo *
                    </label>
                    <input type="file" 
                           id="material-arquivo" 
                           name="arquivo"
                           required
                           accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.zip,.rar,.txt"
                           class="hidden">
                    <div class="flex items-center gap-3">
                        <label for="material-arquivo" 
                               class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm text-sm font-medium text-teal-700 dark:text-teal-300 bg-teal-50 dark:bg-gray-700 hover:bg-teal-100 dark:hover:bg-gray-600 transition">
                            <i class="fa-solid fa-upload mr-2"></i> Escolher Arquivo
                        </label>
                        <span id="material-arquivo-nome" class="text-sm text-gray-500 dark:text-gray-400 truncate max-w-xs">Nenhum arquivo escolhido</span>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, ZIP, RAR, TXT (máx. 50MB)</p>
                </div>
                
                <!-- Botões -->
                <div class="flex justify-end gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <button type="button" 
                            onclick="toggleModal('modal-criar-material', false)"
                            class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                        Cancelar
                    </button>
                    <button type="submit" 
                            id="btn-criar-material"
                            class="px-4 py-2 bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 text-white rounded-lg transition">
                        Adicionar Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
(function() {
    // Carregar listas
    async function carregarListasParaMaterial() {
        try {
            var res = await fetch('/cursos/' + cursoId + '/listas');
            var listas = await res.json();
            
            var select = document.getElementById('material-lista');
            if (select) {
                select.innerHTML = '<option value="">Sem lista</option>';
                
                listas.forEach(function(lista) {
                    var option = document.createElement('option');
                    option.value = lista.id;
                    option.textContent = lista.titulo;
                    select.appendChild(option);
                });
            }
        } catch (err) {
            console.error('Erro ao carregar listas:', err);
        }
    }

    // Atualizar nome do arquivo
    var inputArquivo = document.getElementById('material-arquivo');
    if (inputArquivo) {
        inputArquivo.addEventListener('change', function() {
            var span = document.getElementById('material-arquivo-nome');
            if (this.files && this.files[0]) {
                span.textContent = this.files[0].name;
            }
        });
    }

    // Submit do formulário
    var form = document.getElementById('form-criar-material');
    if (form) {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            var btn = document.getElementById('btn-criar-material');
            var btnTextoOriginal = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Enviando...';
            
            var formData = new FormData(this);
            
            try {
                var res = await fetch('/cursos/' + cursoId + '/materiais', {
                    method: 'POST',
                    body: formData
                });
                
                var data = await res.json();
                
                if (res.ok) {
                    alert('Material adicionado com sucesso!');
                    toggleModal('modal-criar-material', false);
                    window.location.reload();
                } else {
                    alert(data.error || 'Erro ao adicionar material.');
                    btn.disabled = false;
                    btn.innerHTML = btnTextoOriginal;
                }
            } catch (err) {
                console.error('Erro:', err);
                alert('Erro ao conectar com o servidor.');
                btn.disabled = false;
                btn.innerHTML = btnTextoOriginal;
            }
        });
    }

    // Observar quando o modal abrir
    var modalMaterial = document.getElementById('modal-criar-material');
    if (modalMaterial) {
        var observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.attributeName === 'class') {
                    if (!modalMaterial.classList.contains('hidden')) {
                        carregarListasParaMaterial();
                        var formMat = document.getElementById('form-criar-material');
                        if (formMat) formMat.reset();
                        var spanArq = document.getElementById('material-arquivo-nome');
                        if (spanArq) spanArq.textContent = 'Nenhum arquivo escolhido';
                    }
                }
            });
        });
        observer.observe(modalMaterial, { attributes: true });
    }
})();
</script>