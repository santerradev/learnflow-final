<div id="modal-criar-lista" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Nova Lista</h2>
                <button type="button" onclick="toggleModal('modal-criar-lista', false)" 
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                    <i class="fa-solid fa-times text-xl"></i>
                </button>
            </div>
            
            <!-- Formulário -->
            <form id="form-criar-lista" class="space-y-4">
                <div>
                    <label for="lista-titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Título da Lista *
                    </label>
                    <input type="text" 
                           id="lista-titulo" 
                           name="titulo"
                           required
                           placeholder="Ex: Módulo 1 - Introdução"
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                </div>
                
                <div>
                    <label for="lista-descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Descrição (opcional)
                    </label>
                    <textarea id="lista-descricao" 
                              name="descricao"
                              rows="3"
                              placeholder="Breve descrição do conteúdo desta lista..."
                              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 resize-none"></textarea>
                </div>
                
                <!-- Botões -->
                <div class="flex justify-end gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <button type="button" 
                            onclick="toggleModal('modal-criar-lista', false)"
                            class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                        Cancelar
                    </button>
                    <button type="submit" 
                            id="btn-criar-lista"
                            class="px-4 py-2 bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 text-white rounded-lg transition">
                        Criar Lista
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
(function() {
    var form = document.getElementById('form-criar-lista');
    if (form) {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            var btn = document.getElementById('btn-criar-lista');
            var btnTextoOriginal = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Criando...';
            
            var formData = {
                titulo: document.getElementById('lista-titulo').value,
                descricao: document.getElementById('lista-descricao').value || null
            };
            
            try {
                var res = await fetch('/cursos/' + cursoId + '/listas', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });
                
                var data = await res.json();
                
                if (res.ok) {
                    alert('Lista criada com sucesso!');
                    toggleModal('modal-criar-lista', false);
                    window.location.reload();
                } else {
                    alert(data.error || 'Erro ao criar lista.');
                    btn.disabled = false;
                    btn.innerHTML = btnTextoOriginal;
                }
            } catch (err) {
                console.error('Erro:', err);
                alert('Erro ao conectar com o servidor.');
                btn.disabled = false;
                btn.innerHTML = btnTextoOriginal;
            }
        });
    }
})();
</script>