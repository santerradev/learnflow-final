<!-- file: views/plataforma/inicio.ejs -->

<%- include('../partials/header_app', { activeLink: 'inicio' }) %>

<main class="flex-1 overflow-y-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 py-8">
        
        <!-- Cabeçalho -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                Olá, <%= usuario.nome.split(' ')[0] %>! 
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
                Bem-vindo ao LearnFlow
            </p>
        </div>
        
        <!-- Estatísticas -->
        <% if (stats) { %>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <% if (usuario.tipo === 'professor' || usuario.tipo === 'administrador') { %>
                    <!-- Estatísticas para Professor/Admin -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Cursos Criados</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.totalCursos || 0 %></p>
                            </div>
                            <div class="w-12 h-12 bg-teal-100 dark:bg-teal-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-book text-teal-600 dark:text-teal-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Aulas Criadas</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.totalAulas || 0 %></p>
                            </div>
                            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-video text-blue-600 dark:text-blue-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Atividades Criadas</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.totalAtividades || 0 %></p>
                            </div>
                            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-clipboard-check text-purple-600 dark:text-purple-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Estatísticas para Aluno -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Cursos Inscritos</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.totalInscritos || 0 %></p>
                            </div>
                            <div class="w-12 h-12 bg-teal-100 dark:bg-teal-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-book text-teal-600 dark:text-teal-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Atividades Concluídas</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.totalConcluidas || 0 %></p>
                            </div>
                            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-check-circle text-green-600 dark:text-green-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Progresso Geral</p>
                                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1">
                                    <%= stats.totalInscritos > 0 ? Math.round((stats.totalConcluidas / stats.totalInscritos) * 100) : 0 %>%
                                </p>
                            </div>
                            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-chart-line text-blue-600 dark:text-blue-400 text-xl"></i>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
        
        <!-- Cursos Recentes -->
        <div class="mb-8">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <% if (usuario.tipo === 'professor' || usuario.tipo === 'administrador') { %>
                        Meus Cursos
                    <% } else { %>
                        Cursos Inscritos
                    <% } %>
                </h2>
                <a href="/meus-cursos" class="text-teal-600 hover:text-teal-700 dark:text-teal-400 font-medium text-sm">
                    Ver todos <i class="fa-solid fa-arrow-right ml-1"></i>
                </a>
            </div>
            
            <% if (usuario.tipo === 'professor' || usuario.tipo === 'administrador') { %>
                <!-- Cursos criados pelo professor/admin -->
                <% if (meusCursos && meusCursos.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% meusCursos.forEach(function(curso) { %>
                            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition">
                                <div class="h-40 bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center">
                                    <% if (curso.capa_curso) { %>
                                        <img src="/uploads/images/<%= curso.capa_curso %>" alt="<%= curso.titulo %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <i class="fa-solid fa-book text-white text-5xl"></i>
                                    <% } %>
                                </div>
                                <div class="p-5">
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2"><%= curso.titulo %></h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4"><%= curso.materia %></p>
                                    <div class="flex justify-between items-center text-xs text-gray-500 dark:text-gray-400 mb-4">
                                        <span><i class="fa-solid fa-users mr-1"></i> <%= curso._count?.inscricoes || 0 %> alunos</span>
                                        <span><i class="fa-solid fa-video mr-1"></i> <%= curso._count?.aulas || 0 %> aulas</span>
                                    </div>
                                    <a href="/cursos/<%= curso.id %>/mural" class="block w-full py-2 bg-teal-600 hover:bg-teal-700 text-white text-center rounded-lg font-medium transition">
                                        Gerenciar
                                    </a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-12 text-center">
                        <i class="fa-solid fa-book text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">Você ainda não criou nenhum curso.</p>
                        <a href="/cursos/novo" class="inline-block px-6 py-3 bg-teal-600 hover:bg-teal-700 text-white rounded-lg font-medium transition">
                            <i class="fa-solid fa-plus mr-2"></i> Criar Primeiro Curso
                        </a>
                    </div>
                <% } %>
            <% } else { %>
                <!-- Cursos inscritos pelo aluno -->
                <% if (cursosInscritos && cursosInscritos.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% cursosInscritos.forEach(function(curso) { %>
                            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition">
                                <div class="h-40 bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center">
                                    <% if (curso.capa_curso) { %>
                                        <img src="/uploads/images/<%= curso.capa_curso %>" alt="<%= curso.titulo %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <i class="fa-solid fa-book text-white text-5xl"></i>
                                    <% } %>
                                </div>
                                <div class="p-5">
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2"><%= curso.titulo %></h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2"><%= curso.materia %></p>
                                    <div class="flex items-center gap-2 mb-4">
                                        <% if (curso.professor?.foto_perfil) { %>
                                            <img src="/uploads/images/<%= curso.professor.foto_perfil %>" alt="<%= curso.professor.nome %>" class="w-6 h-6 rounded-full">
                                        <% } else { %>
                                            <div class="w-6 h-6 rounded-full bg-gray-200 dark:bg-gray-600"></div>
                                        <% } %>
                                        <span class="text-xs text-gray-500 dark:text-gray-400"><%= curso.professor?.nome %></span>
                                    </div>
                                    <a href="/cursos/<%= curso.id %>/mural" class="block w-full py-2 bg-teal-600 hover:bg-teal-700 text-white text-center rounded-lg font-medium transition">
                                        Acessar Curso
                                    </a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-12 text-center">
                        <i class="fa-solid fa-book text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">Você ainda não está inscrito em nenhum curso.</p>
                        <a href="/meus-cursos" class="inline-block px-6 py-3 bg-teal-600 hover:bg-teal-700 text-white rounded-lg font-medium transition">
                            <i class="fa-solid fa-search mr-2"></i> Explorar Cursos
                        </a>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</main>

<%- include('../partials/footer_app') %>