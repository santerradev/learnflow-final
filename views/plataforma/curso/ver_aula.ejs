<!-- file: views/plataforma/curso/ver_aula.ejs -->

<%- include('../../partials/header_app') %>

<main class="flex-1 overflow-y-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 py-6">
        
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
            <a href="/cursos/<%= curso.id %>/aulas" class="hover:text-teal-600 dark:hover:text-teal-400">
                <i class="fa-solid fa-arrow-left mr-1"></i> Voltar às Aulas
            </a>
            <span>/</span>
            <span class="text-gray-700 dark:text-gray-300"><%= aula.titulo %></span>
        </nav>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Coluna Principal - Vídeo -->
            <div class="lg:col-span-2 space-y-6">
                
                <!-- Player de Vídeo -->
                <div class="bg-black rounded-lg overflow-hidden aspect-video">
                    <video 
                        id="video-player"
                        class="w-full h-full"
                        controls
                        poster="<%= aula.capa_aula ? '/uploads/images/' + aula.capa_aula : '' %>">
                        <source src="/uploads/videos/<%= aula.video %>" type="video/mp4">
                        Seu navegador não suporta a reprodução de vídeo.
                    </video>
                </div>
                
                <!-- Informações da Aula -->
                <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
                    <div class="flex justify-between items-start">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= aula.titulo %></h1>
                            <% if (aula.lista) { %>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                                    <i class="fa-solid fa-folder mr-1"></i> <%= aula.lista.titulo %>
                                </p>
                            <% } %>
                        </div>
                        
                        <% if (!eDonoCurso && inscricao) { %>
                            <% if (aulaConcluida) { %>
                                <span class="flex items-center gap-2 px-4 py-2 bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 rounded-lg text-sm font-medium">
                                    <i class="fa-solid fa-check-circle"></i> Concluída
                                </span>
                            <% } else { %>
                                <button id="btn-concluir" 
                                        onclick="concluirAula()"
                                        class="flex items-center gap-2 px-4 py-2 bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 text-white rounded-lg text-sm font-medium transition">
                                    <i class="fa-solid fa-check-circle"></i> Marcar como Concluída
                                </button>
                            <% } %>
                        <% } %>
                    </div>
                    
                    <% if (aula.data_prazo) { %>
                        <div class="mt-4 flex items-center text-sm text-gray-600 dark:text-gray-400">
                            <i class="fa-solid fa-calendar mr-2"></i>
                            Prazo: <%= new Date(aula.data_prazo).toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' }) %>
                        </div>
                    <% } %>
                    
                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Sobre esta aula</h3>
                        <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= aula.descricao || 'Sem descrição disponível.' %></p>
                    </div>
                    
                    <% if (proximaAula) { %>
                        <a href="/cursos/<%= curso.id %>/aulas/<%= proximaAula.id %>" 
                           class="mt-6 w-full flex items-center justify-center gap-2 px-4 py-3 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-lg font-medium transition">
                            Próxima Aula: <%= proximaAula.titulo %> <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    <% } %>
                </div>
            </div>
            
            <!-- Coluna Lateral - Playlist -->
            <div class="lg:col-span-1 space-y-6">
                
                <!-- Lista de Reprodução -->
                <div class="bg-white dark:bg-gray-800 p-5 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center gap-2">
                        <i class="fa-solid fa-list-ul text-teal-500"></i> Lista de Aulas
                    </h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        <%= todasAulas.findIndex(function(a) { return a.id === aula.id; }) + 1 %> de <%= todasAulas.length %> aulas
                    </p>
                    
                    <div class="mt-4 space-y-1 max-h-96 overflow-y-auto">
                        <% todasAulas.forEach(function(item, index) { %>
                            <a href="/cursos/<%= curso.id %>/aulas/<%= item.id %>" 
                               class="flex items-center gap-3 p-3 rounded-lg transition
                                      <%= item.id === aula.id ? 'bg-teal-600 dark:bg-teal-700 text-white' : 'hover:bg-gray-100 dark:hover:bg-gray-700' %>">
                                <span class="flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center text-xs font-medium
                                       <%= item.id === aula.id ? 'bg-teal-500 text-white' : 'bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-300' %>">
                                    <%= index + 1 %>
                                </span>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-sm truncate <%= item.id === aula.id ? 'text-white' : 'text-gray-700 dark:text-gray-300' %>">
                                        <%= item.titulo %>
                                    </p>
                                    <% if (item.duracao) { %>
                                        <span class="text-xs <%= item.id === aula.id ? 'text-teal-100' : 'text-gray-500 dark:text-gray-400' %>">
                                            <i class="fa-regular fa-clock mr-1"></i> <%= item.duracao %> min
                                        </span>
                                    <% } %>
                                </div>
                                <% if (aulasConcluidasIds && aulasConcluidasIds.includes(item.id)) { %>
                                    <i class="fa-solid fa-check-circle <%= item.id === aula.id ? 'text-white' : 'text-green-500' %>"></i>
                                <% } %>
                            </a>
                        <% }); %>
                    </div>
                </div>
                
                <!-- Card de Conclusão -->
                <% if (aulaConcluida) { %>
                    <div class="bg-white dark:bg-gray-800 p-5 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 text-center">
                        <i class="fa-solid fa-check-circle text-green-500 text-4xl"></i>
                        <h4 class="font-semibold text-gray-900 dark:text-white mt-3">Aula concluída!</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Parabéns! Você concluiu esta aula.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<script>
var cursoId = <%= curso.id %>;
var aulaId = <%= aula.id %>;
var aulasConcluidasIds = <%= JSON.stringify(aulasConcluidasIds || []) %>;

async function concluirAula() {
    var btn = document.getElementById('btn-concluir');
    btn.disabled = true;
    btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Salvando...';
    
    try {
        var res = await fetch('/cursos/' + cursoId + '/aulas/' + aulaId + '/concluir', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        if (res.ok) {
            window.location.reload();
        } else {
            var data = await res.json();
            alert(data.error || 'Erro ao marcar aula como concluída.');
            btn.disabled = false;
            btn.innerHTML = '<i class="fa-solid fa-check-circle"></i> Marcar como Concluída';
        }
    } catch (err) {
        alert('Erro ao conectar com o servidor.');
        btn.disabled = false;
        btn.innerHTML = '<i class="fa-solid fa-check-circle"></i> Marcar como Concluída';
    }
}
</script>

<%- include('../../partials/footer_app') %>