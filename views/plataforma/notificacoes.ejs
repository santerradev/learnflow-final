<script>
// Marcar todas como lidas
async function marcarTodasComoLidas() {
    try {
        var res = await fetch('/notificacoes/api/ler-todas', { 
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' }
        });
        
        if (res.ok) {
            alert('Todas as notificações foram marcadas como lidas');
            window.location.reload();
        } else {
            alert('Erro ao marcar notificações');
        }
    } catch (err) {
        console.error('Erro:', err);
        alert('Erro ao conectar com o servidor');
    }
}

// Marcar como lida ao clicar
async function marcarComoLida(id, link) {
    try {
        await fetch('/notificacoes/api/' + id + '/ler', { 
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' }
        });
        
        if (link) {
            window.location.href = link;
        } else {
            window.location.reload();
        }
    } catch (err) {
        console.error('Erro:', err);
    }
}

// Deletar notificação
async function deletarNotificacao(event, id) {
    event.stopPropagation();
    
    if (!confirm('Deseja deletar esta notificação?')) return;
    
    try {
        var res = await fetch('/notificacoes/api/' + id, { method: 'DELETE' });
        
        if (res.ok) {
            window.location.reload();
        } else {
            alert('Erro ao deletar notificação');
        }
    } catch (err) {
        console.error('Erro:', err);
        alert('Erro ao conectar com o servidor');
    }
}
</script>

