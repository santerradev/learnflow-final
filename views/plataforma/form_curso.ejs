<!-- file: views/plataforma/form_cursos.ejs -->

<%- include('../partials/header_app') %>

<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= pageTitle %></h1>
    <p class="text-sm text-gray-600 dark:text-gray-400">Preencha as informações abaixo.</p>
</div>

<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6 md:p-8">
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <%= error %>
        </div>
    <% } %>

    <form action="<%= locals.curso ? '/cursos/' + locals.curso.id + '/editar' : '/cursos/novo' %>" method="POST" enctype="multipart/form-data" class="space-y-6">

        <div>
            <label for="titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Título do Curso</label>
            <input type="text" id="titulo" name="titulo" required 
                   value="<%= locals.curso?.titulo || '' %>" 
                   class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-teal-500 focus:border-teal-500">
        </div>

        <div>
            <label for="materia" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Matéria / Descrição Curta</label>
            <input type="text" id="materia" name="materia" required 
                   placeholder="Ex: 3º Ano - Turma A" 
                   value="<%= locals.curso?.materia || '' %>"
                   class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-teal-500 focus:border-teal-500">
        </div>

        <div>
            <label for="descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Descrição Completa</o>
            <textarea id="descricao" name="descricao" rows="4" 
                      placeholder="Descreva o que os alunos aprenderão neste curso..."
                      class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-teal-500 focus:border-teal-500"><%= locals.curso?.descricao || '' %></textarea>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Capa do Curso <%= locals.curso ? '(Opcional: Mudar)' : '(Obrigatório)' %>
            </label>
            
            <% if (locals.curso && locals.curso.capa_curso) { %>
                <div class="mt-2 mb-2">
                    <p class="text-xs text-gray-500 dark:text-gray-400">Capa atual:</p>
                    <img src="/uploads/images/<%= locals.curso.capa_curso %>" alt="Capa atual" class="mt-1 h-20 w-auto rounded shadow-sm">
                </div>
            <% } %>

            <input type="file" id="capa_curso" name="capa_curso" accept="image/*" 
                   class="hidden" 
                   <%= locals.curso ? '' : 'required' %>
                   onchange="document.getElementById('file-chosen-capa').textContent = this.files[0] ? this.files[0].name : 'Nenhum ficheiro selecionado'">

            <div class="mt-2 flex items-center">
                <label for="capa_curso" 
                       class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-teal-500">
                    <i class="fa-solid fa-upload mr-2 h-4 w-4 text-gray-500 dark:text-gray-400"></i>
                    Escolher ficheiro
                </label>
                <span id="file-chosen-capa" class="ml-3 text-sm text-gray-500 dark:text-gray-400 truncate">Nenhum ficheiro selecionado</span>
            </div>
        </div>

        <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-gray-700">
            <a href="/cursos" 
               class="px-6 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                Cancelar
            </a>
            <button type="submit" 
                    class="px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                <%= locals.curso ? 'Salvar Alterações' : 'Criar Curso' %> 
            </button>
        </div>
    </form>
</div>

<%- include('../partials/footer_app') %>