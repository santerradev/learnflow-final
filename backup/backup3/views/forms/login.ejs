<%- include('../partials/head', { title: 'Login' }) %>

<body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen flex">
        <!-- Left Side - Teal Background -->
        <div class="split-screen-left hidden lg:flex lg:w-1/2 bg-gradient-to-br from-teal-500 to-teal-600 text-white p-12 flex-col justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center">
                    <span class="text-teal-600 text-2xl font-bold">L</span>
                </div>
                <span class="text-2xl font-bold">LearnFlow</span>
            </div>

            <!-- Main Content -->
            <div class="space-y-6">
                <h1 class="text-5xl font-bold leading-tight">
                    Descubra novas possibilidades de ensino
                </h1>
                <p class="text-xl text-teal-100">
                    Plataforma completa para instituições de ensino. Gestão de cursos, aulas interativas e comunicação integrada.
                </p>
            </div>

            <!-- Statistics -->
            <div class="grid grid-cols-3 gap-8">
                <div>
                    <div class="text-4xl font-bold mb-1">500+</div>
                    <div class="text-teal-100">Cursos Ativos</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-1">2.5k</div>
                    <div class="text-teal-100">Professores</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-1">15k</div>
                    <div class="text-teal-100">Alunos Ativos</div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
            <div class="w-full max-w-md space-y-8 fade-in">
                <!-- Mobile Logo -->
                <div class="lg:hidden flex items-center justify-center space-x-3 mb-8">
                    <div class="w-12 h-12 bg-teal-500 rounded-lg flex items-center justify-center">
                        <span class="text-white text-2xl font-bold">L</span>
                    </div>
                    <span class="text-2xl font-bold text-gray-800 dark:text-white">LearnFlow</span>
                </div>

                <!-- Header -->
                <div class="text-center lg:text-left">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                        Entrar na sua conta
                    </h2>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">
                        Acesse sua plataforma de ensino
                    </p>
                </div>

                <!-- Alerts -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            <span><%= error %></span>
                        </div>
                    </div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 rounded">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle mr-2"></i>
                            <span><%= success %></span>
                        </div>
                    </div>
                <% } %>

                <!-- Login Form -->
                <form action="/login" method="POST" class="space-y-6" onsubmit="return validateLoginForm()">
                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Email
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            placeholder="seu@email.com"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                        >
                    </div>

                    <!-- Password -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Senha
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password" 
                                name="senha" 
                                placeholder="Sua senha"
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent pr-12"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword('password', 'togglePasswordIcon')"
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
                            >
                                <i id="togglePasswordIcon" class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Forgot Password -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input 
                                type="checkbox" 
                                id="remember" 
                                name="remember"
                                class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded"
                            >
                            <label for="remember" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                                Lembrar-me
                            </label>
                        </div>
                        <a href="/esqueci-senha" class="text-sm font-medium text-teal-600 hover:text-teal-500">
                            Esqueci minha senha
                        </a>
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        id="loginButton"
                        class="w-full btn-primary text-white font-semibold py-3 px-4 rounded-lg transition duration-200"
                    >
                        Entrar
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-gray-50 dark:bg-gray-900 text-gray-500">
                            Não tem uma conta?
                        </span>
                    </div>
                </div>

                <!-- Sign Up Link -->
                <div class="text-center">
                    <a href="/cadastro" class="font-medium text-teal-600 hover:text-teal-500">
                        Cadastre-se
                    </a>
                </div>

                <!-- Demo Credentials -->
                <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg text-sm">
                    <p class="text-gray-600 dark:text-gray-400 mb-2">
                        <strong>Demo:</strong> admin@edu.com / password
                    </p>
                    <button 
                        type="button"
                        onclick="generateTestUsers()"
                        class="text-teal-600 hover:text-teal-500 text-xs"
                    >
                        Gerar usuários de teste para chat
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function validateLoginForm() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!validateEmail(email)) {
                showAlert('Por favor, insira um email válido', 'error');
                return false;
            }
            
            if (password.length < 3) {
                showAlert('Senha muito curta', 'error');
                return false;
            }
            
            showLoading('loginButton');
            return true;
        }

        function generateTestUsers() {
            showAlert('Funcionalidade em desenvolvimento', 'info');
        }
    </script>

<%- include('../partials/scripts') %>