<%- include('../partials/head', { title: 'Redefinir Senha' }) %>

<body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen flex">
        <!-- Left Side - Teal Background -->
        <div class="split-screen-left hidden lg:flex lg:w-1/2 bg-gradient-to-br from-teal-500 to-teal-600 text-white p-12 flex-col justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center">
                    <span class="text-teal-600 text-2xl font-bold">L</span>
                </div>
                <span class="text-2xl font-bold">LearnFlow</span>
            </div>

            <!-- Main Content -->
            <div class="space-y-6">
                <h1 class="text-5xl font-bold leading-tight">
                    Crie uma nova senha
                </h1>
                <p class="text-xl text-teal-100">
                    Digite sua nova senha para recuperar o acesso à sua conta. Use uma senha forte e segura.
                </p>
            </div>

            <!-- Statistics -->
            <div class="grid grid-cols-3 gap-8">
                <div>
                    <div class="text-4xl font-bold mb-1">500+</div>
                    <div class="text-teal-100">Cursos Ativos</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-1">2.5k</div>
                    <div class="text-teal-100">Professores</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-1">15k</div>
                    <div class="text-teal-100">Alunos Ativos</div>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
            <div class="w-full max-w-md space-y-8 fade-in">
                <!-- Mobile Logo -->
                <div class="lg:hidden flex items-center justify-center space-x-3 mb-8">
                    <div class="w-12 h-12 bg-teal-500 rounded-lg flex items-center justify-center">
                        <span class="text-white text-2xl font-bold">L</span>
                    </div>
                    <span class="text-2xl font-bold text-gray-800 dark:text-white">LearnFlow</span>
                </div>

                <!-- Icon -->
                <div class="text-center">
                    <div class="mx-auto w-16 h-16 bg-teal-100 dark:bg-teal-900 rounded-full flex items-center justify-center mb-4">
                        <i class="fas fa-lock text-3xl text-teal-600"></i>
                    </div>
                </div>

                <!-- Header -->
                <div class="text-center lg:text-left">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                        Redefinir senha
                    </h2>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">
                        Digite sua nova senha abaixo
                    </p>
                </div>

                <!-- Alerts -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            <span><%= error %></span>
                        </div>
                    </div>
                <% } %>

                <!-- Form -->
                <form action="/redefinir-senha" method="POST" class="space-y-6" onsubmit="return validateResetPasswordForm()">
                    <input type="hidden" name="token" value="<%= typeof token !== 'undefined' ? token : '' %>">

                    <!-- Nova Senha -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Nova Senha
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password" 
                                name="senha" 
                                placeholder="Mínimo 8 caracteres"
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent pr-12"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword('password', 'togglePasswordIcon')"
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
                            >
                                <i id="togglePasswordIcon" class="fas fa-eye"></i>
                            </button>
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Deve conter: maiúsculas, minúsculas, números e símbolos
                        </p>
                    </div>

                    <!-- Confirmar Senha -->
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Confirmar Nova Senha
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="confirmPassword" 
                                name="confirmarSenha" 
                                placeholder="Confirme sua senha"
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent pr-12"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword('confirmPassword', 'toggleConfirmPasswordIcon')"
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
                            >
                                <i id="toggleConfirmPasswordIcon" class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        id="resetPasswordButton"
                        class="w-full btn-primary text-white font-semibold py-3 px-4 rounded-lg transition duration-200"
                    >
                        Redefinir Senha
                    </button>
                </form>

                <!-- Back to Login -->
                <div class="text-center">
                    <a href="/login" class="text-sm font-medium text-teal-600 hover:text-teal-500 inline-flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Voltar para o login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function validateResetPasswordForm() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (!validatePassword(password)) {
                showAlert('A senha deve ter no mínimo 8 caracteres, incluindo maiúsculas, minúsculas, números e símbolos', 'error');
                return false;
            }
            
            if (password !== confirmPassword) {
                showAlert('As senhas não coincidem', 'error');
                return false;
            }
            
            showLoading('resetPasswordButton');
            return true;
        }
    </script>

<%- include('../partials/scripts') %>