<!-- Modal Criar Novo Material -->
<div id="modalCriarMaterial" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center overflow-y-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full mx-4 my-8 fade-in">
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center space-x-2">
                <i class="fas fa-file text-teal-600"></i>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Novo Material
                </h3>
            </div>
            <button onclick="closeModalCriarMaterial()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Body -->
        <form id="formCriarMaterial" onsubmit="return handleCriarMaterial(event)">
            <div class="p-6 space-y-4 max-h-[calc(90vh-250px)] overflow-y-auto">
                <!-- Título do Material -->
                <div>
                    <label for="tituloMaterial" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Título do Material <span class="text-red-500">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="tituloMaterial" 
                        name="titulo" 
                        placeholder="Ex: Apostila de Vetores"
                        required
                        maxlength="100"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                </div>

                <!-- Descrição -->
                <div>
                    <label for="descricaoMaterial" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Descrição
                    </label>
                    <textarea 
                        id="descricaoMaterial" 
                        name="descricao" 
                        rows="3"
                        placeholder="Descreva o material..."
                        maxlength="500"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent resize-none"
                    ></textarea>
                </div>

                <!-- Lista -->
                <div>
                    <label for="listaIdMaterial" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Lista <span class="text-red-500">*</span>
                    </label>
                    <select 
                        id="listaIdMaterial" 
                        name="listaId" 
                        required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                        <option value="">Selecione uma lista</option>
                        <% if (typeof listas !== 'undefined' && listas && listas.length > 0) { %>
                            <% listas.forEach(lista => { %>
                                <option value="<%= lista.id %>"><%= lista.titulo %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>

                <!-- Tipo de Arquivo -->
                <div>
                    <label for="tipoArquivoMaterial" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Tipo de Arquivo <span class="text-red-500">*</span>
                    </label>
                    <select 
                        id="tipoArquivoMaterial" 
                        name="tipoArquivo" 
                        required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                        <option value="">Selecione o tipo</option>
                        <option value="PDF">PDF</option>
                        <option value="DOC">DOC/DOCX</option>
                        <option value="PPT">PPT/PPTX</option>
                        <option value="XLS">XLS/XLSX</option>
                        <option value="IMG">Imagem</option>
                        <option value="ZIP">ZIP/RAR</option>
                        <option value="OUTRO">Outro</option>
                    </select>
                </div>

                <!-- Upload de Arquivo -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Upload de Arquivo <span class="text-red-500">*</span>
                    </label>
                    <div class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-6 text-center hover:border-teal-500 transition">
                        <input 
                            type="file" 
                            id="arquivoMaterial" 
                            name="arquivo" 
                            required
                            class="hidden"
                            onchange="handleMaterialFileSelect(event)"
                        >
                        <label for="arquivoMaterial" class="cursor-pointer">
                            <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                Clique para escolher arquivo ou arraste aqui
                            </p>
                            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                                Formatos aceitos: PDF, DOC, PPT, imagens, ZIP (Máx: 50MB)
                            </p>
                        </label>
                        <div id="materialFileName" class="mt-2 text-sm text-teal-600 hidden"></div>
                    </div>
                </div>

                <input type="hidden" name="cursoId" id="cursoIdMaterial" value="<%= typeof cursoId !== 'undefined' ? cursoId : '' %>">
            </div>

            <!-- Footer -->
            <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
                <button 
                    type="button"
                    onclick="closeModalCriarMaterial()" 
                    class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg font-medium transition"
                >
                    Cancelar
                </button>
                <button 
                    type="submit"
                    class="px-4 py-2 btn-primary text-white rounded-lg font-medium transition"
                >
                    <i class="fas fa-plus mr-2"></i>
                    Criar Material
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModalCriarMaterial(cursoId = null) {
        const modal = document.getElementById('modalCriarMaterial');
        const cursoIdInput = document.getElementById('cursoIdMaterial');
        
        if (cursoId) {
            cursoIdInput.value = cursoId;
        }
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        setTimeout(() => {
            document.getElementById('tituloMaterial').focus();
        }, 100);
    }

    function closeModalCriarMaterial() {
        const modal = document.getElementById('modalCriarMaterial');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        
        document.getElementById('formCriarMaterial').reset();
        document.getElementById('materialFileName').classList.add('hidden');
    }

    function handleMaterialFileSelect(event) {
        const file = event.target.files[0];
        const fileNameDiv = document.getElementById('materialFileName');
        
        if (file) {
            const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
            fileNameDiv.innerHTML = `
                <i class="fas fa-check-circle mr-2"></i>
                ${file.name} (${sizeMB} MB)
            `;
            fileNameDiv.classList.remove('hidden');
        } else {
            fileNameDiv.classList.add('hidden');
        }
    }

    async function handleCriarMaterial(event) {
        event.preventDefault();
        
        const formData = new FormData(event.target);
        const cursoId = formData.get('cursoId');
        
        try {
            showLoading('Fazendo upload do material...');
            
            const response = await fetch(`/cursos/${cursoId}/materiais`, {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (response.ok) {
                showAlert('Material criado com sucesso!', 'success');
                closeModalCriarMaterial();
                
                setTimeout(() => {
                    location.reload();
                }, 1000);
            } else {
                showAlert(result.error || 'Erro ao criar material', 'error');
            }
        } catch (error) {
            console.error('Erro:', error);
            showAlert('Erro ao criar material', 'error');
        } finally {
            hideLoading();
        }
    }
</script>