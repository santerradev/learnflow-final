<div id="confirmModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full mx-4 fade-in">
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 id="confirmModalTitle" class="text-xl font-semibold text-gray-900 dark:text-white">
                Confirmar ação
            </h3>
            <button onclick="closeConfirmModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Body -->
        <div class="p-6">
            <div id="confirmModalIcon" class="mx-auto w-12 h-12 bg-yellow-100 dark:bg-yellow-900/20 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-exclamation-triangle text-2xl text-yellow-600 dark:text-yellow-400"></i>
            </div>
            <p id="confirmModalMessage" class="text-gray-700 dark:text-gray-300 text-center mb-4">
                Tem certeza que deseja realizar esta ação?
            </p>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
            <button 
                onclick="closeConfirmModal()" 
                class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg font-medium transition"
            >
                Cancelar
            </button>
            <button 
                id="confirmModalButton"
                onclick="confirmModalAction()" 
                class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition"
            >
                Confirmar
            </button>
        </div>
    </div>
</div>

<script>
    let confirmModalCallback = null;

    function showConfirmModal(options = {}) {
        const modal = document.getElementById('confirmModal');
        const title = document.getElementById('confirmModalTitle');
        const message = document.getElementById('confirmModalMessage');
        const icon = document.getElementById('confirmModalIcon');
        const button = document.getElementById('confirmModalButton');

        // Configurar conteúdo
        title.textContent = options.title || 'Confirmar ação';
        message.textContent = options.message || 'Tem certeza que deseja realizar esta ação?';
        button.textContent = options.confirmText || 'Confirmar';

        // Configurar ícone e cores
        const type = options.type || 'warning';
        const colors = {
            danger: { bg: 'bg-red-100 dark:bg-red-900/20', icon: 'text-red-600 dark:text-red-400', btn: 'bg-red-600 hover:bg-red-700' },
            warning: { bg: 'bg-yellow-100 dark:bg-yellow-900/20', icon: 'text-yellow-600 dark:text-yellow-400', btn: 'bg-yellow-600 hover:bg-yellow-700' },
            info: { bg: 'bg-blue-100 dark:bg-blue-900/20', icon: 'text-blue-600 dark:text-blue-400', btn: 'bg-blue-600 hover:bg-blue-700' }
        };

        const colorScheme = colors[type] || colors.warning;
        icon.className = `mx-auto w-12 h-12 ${colorScheme.bg} rounded-full flex items-center justify-center mb-4`;
        icon.querySelector('i').className = `fas fa-exclamation-triangle text-2xl ${colorScheme.icon}`;
        button.className = `px-4 py-2 ${colorScheme.btn} text-white rounded-lg font-medium transition`;

        // Armazenar callback
        confirmModalCallback = options.onConfirm;

        // Mostrar modal
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    function closeConfirmModal() {
        const modal = document.getElementById('confirmModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        confirmModalCallback = null;
    }

    function confirmModalAction() {
        if (confirmModalCallback && typeof confirmModalCallback === 'function') {
            confirmModalCallback();
        }
        closeConfirmModal();
    }

