<!-- Modal Criar Nova Aula -->
<div id="modalCriarAula" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center overflow-y-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-3xl w-full mx-4 my-8 fade-in">
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center space-x-2">
                <i class="fas fa-play-circle text-teal-600"></i>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Nova Videoaula
                </h3>
            </div>
            <button onclick="closeModalCriarAula()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Tabs -->
        <div class="border-b border-gray-200 dark:border-gray-700">
            <nav class="flex -mb-px">
                <button 
                    type="button"
                    onclick="switchTabAula('lista')" 
                    id="tabListaBtn"
                    class="tab-aula-btn active px-6 py-3 text-sm font-medium border-b-2 border-teal-500 text-teal-600"
                >
                    <i class="fas fa-folder mr-2"></i>
                    Lista
                </button>
                <button 
                    type="button"
                    onclick="switchTabAula('aula')" 
                    id="tabAulaBtn"
                    class="tab-aula-btn px-6 py-3 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                >
                    <i class="fas fa-play mr-2"></i>
                    Aula
                </button>
                <button 
                    type="button"
                    onclick="switchTabAula('atividade')" 
                    id="tabAtividadeBtn"
                    class="tab-aula-btn px-6 py-3 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                >
                    <i class="fas fa-clipboard-list mr-2"></i>
                    Atividade
                </button>
                <button 
                    type="button"
                    onclick="switchTabAula('material')" 
                    id="tabMaterialBtn"
                    class="tab-aula-btn px-6 py-3 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                >
                    <i class="fas fa-file mr-2"></i>
                    Material
                </button>
            </nav>
        </div>

        <!-- Body -->
        <form id="formCriarAula" onsubmit="return handleCriarAula(event)">
            <div class="p-6 space-y-4 max-h-[calc(90vh-300px)] overflow-y-auto">
                <!-- Título da Aula -->
                <div>
                    <label for="tituloAula" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Título da Aula <span class="text-red-500">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="tituloAula" 
                        name="titulo" 
                        placeholder="Ex: Introdução aos Vetores"
                        required
                        maxlength="100"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                </div>

                <!-- Descrição -->
                <div>
                    <label for="descricaoAula" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Descrição
                    </label>
                    <textarea 
                        id="descricaoAula" 
                        name="descricao" 
                        rows="3"
                        placeholder="Descreva o conteúdo da aula..."
                        maxlength="500"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent resize-none"
                    ></textarea>
                </div>

                <!-- Lista -->
                <div>
                    <label for="listaIdAula" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Lista <span class="text-red-500">*</span>
                    </label>
                    <select 
                        id="listaIdAula" 
                        name="listaId" 
                        required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                        <option value="">Selecione uma lista</option>
                        <% if (typeof listas !== 'undefined' && listas && listas.length > 0) { %>
                            <% listas.forEach(lista => { %>
                                <option value="<%= lista.id %>"><%= lista.titulo %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>

                <!-- Vídeo -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Vídeo <span class="text-red-500">*</span>
                    </label>
                    
                    <!-- Tabs de Vídeo -->
                    <div class="flex space-x-2 mb-3">
                        <button 
                            type="button"
                            onclick="switchVideoSource('youtube')" 
                            id="youtubeBtn"
                            class="flex-1 px-4 py-2 text-sm font-medium bg-teal-50 dark:bg-teal-900/20 text-teal-600 rounded-lg border-2 border-teal-500"
                        >
                            <i class="fab fa-youtube mr-2"></i>
                            URL do YouTube
                        </button>
                        <button 
                            type="button"
                            onclick="switchVideoSource('upload')" 
                            id="uploadBtn"
                            class="flex-1 px-4 py-2 text-sm font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg border-2 border-transparent"
                        >
                            <i class="fas fa-upload mr-2"></i>
                            Upload de Vídeo
                        </button>
                    </div>

                    <!-- URL YouTube -->
                    <div id="youtubeSection">
                        <input 
                            type="url" 
                            id="videoUrlAula" 
                            name="videoUrl" 
                            placeholder="https://youtube.com/..."
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                        >
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Forneça uma URL do YouTube ou faça upload de um vídeo
                        </p>
                    </div>

                    <!-- Upload de Vídeo -->
                    <div id="uploadSection" class="hidden">
                        <div class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-6 text-center hover:border-teal-500 transition">
                            <input 
                                type="file" 
                                id="videoFileAula" 
                                name="videoFile" 
                                accept="video/*"
                                class="hidden"
                                onchange="handleVideoFileSelect(event)"
                            >
                            <label for="videoFileAula" class="cursor-pointer">
                                <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                                <p class="text-sm text-gray-600 dark:text-gray-400">
                                    Clique para escolher arquivo ou arraste aqui
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                                    MP4, AVI, MOV (Máx: 500MB)
                                </p>
                            </label>
                            <div id="videoFileName" class="mt-2 text-sm text-teal-600 hidden"></div>
                        </div>
                    </div>
                </div>

                <!-- Duração -->
                <div>
                    <label for="duracaoAula" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Duração (minutos)
                    </label>
                    <input 
                        type="number" 
                        id="duracaoAula" 
                        name="duracao" 
                        placeholder="45"
                        min="1"
                        max="300"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                </div>

                <input type="hidden" name="cursoId" id="cursoIdAula" value="<%= typeof cursoId !== 'undefined' ? cursoId : '' %>">
            </div>

            <!-- Footer -->
            <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
                <button 
                    type="button"
                    onclick="closeModalCriarAula()" 
                    class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg font-medium transition"
                >
                    Cancelar
                </button>
                <button 
                    type="submit"
                    class="px-4 py-2 btn-primary text-white rounded-lg font-medium transition"
                >
                    <i class="fas fa-plus mr-2"></i>
                    Criar Aula
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModalCriarAula(cursoId = null) {
        const modal = document.getElementById('modalCriarAula');
        const cursoIdInput = document.getElementById('cursoIdAula');
        
        if (cursoId) {
            cursoIdInput.value = cursoId;
        }
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        setTimeout(() => {
            document.getElementById('tituloAula').focus();
        }, 100);
    }

    function closeModalCriarAula() {
        const modal = document.getElementById('modalCriarAula');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        
        document.getElementById('formCriarAula').reset();
    }

    function switchTabAula(tab) {
        // Apenas visual - todas as tabs levam ao mesmo modal por enquanto
        const buttons = document.querySelectorAll('.tab-aula-btn');
        buttons.forEach(btn => {
            btn.classList.remove('border-teal-500', 'text-teal-600');
            btn.classList.add('border-transparent', 'text-gray-500');
        });
        
        const activeBtn = document.getElementById(`tab${tab.charAt(0).toUpperCase() + tab.slice(1)}Btn`);
        if (activeBtn) {
            activeBtn.classList.add('border-teal-500', 'text-teal-600');
            activeBtn.classList.remove('border-transparent', 'text-gray-500');
        }
    }

    function switchVideoSource(source) {
        const youtubeSection = document.getElementById('youtubeSection');
        const uploadSection = document.getElementById('uploadSection');
        const youtubeBtn = document.getElementById('youtubeBtn');
        const uploadBtn = document.getElementById('uploadBtn');
        
        if (source === 'youtube') {
            youtubeSection.classList.remove('hidden');
            uploadSection.classList.add('hidden');
            youtubeBtn.classList.add('bg-teal-50', 'dark:bg-teal-900/20', 'text-teal-600', 'border-teal-500');
            youtubeBtn.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300', 'border-transparent');
            uploadBtn.classList.remove('bg-teal-50', 'dark:bg-teal-900/20', 'text-teal-600', 'border-teal-500');
            uploadBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300', 'border-transparent');
            
            // Limpar upload
            document.getElementById('videoFileAula').value = '';
            document.getElementById('videoFileName').classList.add('hidden');
        } else {
            youtubeSection.classList.add('hidden');
            uploadSection.classList.remove('hidden');
            uploadBtn.classList.add('bg-teal-50', 'dark:bg-teal-900/20', 'text-teal-600', 'border-teal-500');
            uploadBtn.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300', 'border-transparent');
            youtubeBtn.classList.remove('bg-teal-50', 'dark:bg-teal-900/20', 'text-teal-600', 'border-teal-500');
            youtubeBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300', 'border-transparent');
            
            // Limpar URL
            document.getElementById('videoUrlAula').value = '';
        }
    }

    function handleVideoFileSelect(event) {
        const file = event.target.files[0];
        const fileNameDiv = document.getElementById('videoFileName');
        
        if (file) {
            const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
            fileNameDiv.textContent = `${file.name} (${sizeMB} MB)`;
            fileNameDiv.classList.remove('hidden');
        } else {
            fileNameDiv.classList.add('hidden');
        }
    }

    async function handleCriarAula(event) {
        event.preventDefault();
        
        const formData = new FormData(event.target);
        const cursoId = formData.get('cursoId');
        
        try {
            showLoading('Criando aula...');
            
            const response = await fetch(`/cursos/${cursoId}/aulas`, {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (response.ok) {
                showAlert('Aula criada com sucesso!', 'success');
                closeModalCriarAula();
                
                setTimeout(() => {
                    location.reload();
                }, 1000);
            } else {
                showAlert(result.error || 'Erro ao criar aula', 'error');
            }
        } catch (error) {
            console.error('Erro:', error);
            showAlert('Erro ao criar aula', 'error');
        } finally {
            hideLoading();
        }
    }
</script>