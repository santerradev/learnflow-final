<!-- Flash Messages / Alerts -->
<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert-success bg-green-50 dark:bg-green-900/20 border-l-4 border-green-500 text-green-700 dark:text-green-400 p-4 rounded mb-4 fade-in" role="alert">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-3 text-xl"></i>
            <div class="flex-1">
                <p class="font-medium"><%= success %></p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-green-700 dark:text-green-400 hover:text-green-900 dark:hover:text-green-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert-error bg-red-50 dark:bg-red-900/20 border-l-4 border-red-500 text-red-700 dark:text-red-400 p-4 rounded mb-4 fade-in" role="alert">
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle mr-3 text-xl"></i>
            <div class="flex-1">
                <p class="font-medium"><%= error %></p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-red-700 dark:text-red-400 hover:text-red-900 dark:hover:text-red-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (typeof warning !== 'undefined' && warning) { %>
    <div class="alert-warning bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-500 text-yellow-700 dark:text-yellow-400 p-4 rounded mb-4 fade-in" role="alert">
        <div class="flex items-center">
            <i class="fas fa-exclamation-triangle mr-3 text-xl"></i>
            <div class="flex-1">
                <p class="font-medium"><%= warning %></p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-yellow-700 dark:text-yellow-400 hover:text-yellow-900 dark:hover:text-yellow-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (typeof info !== 'undefined' && info) { %>
    <div class="alert-info bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-500 text-blue-700 dark:text-blue-400 p-4 rounded mb-4 fade-in" role="alert">
        <div class="flex items-center">
            <i class="fas fa-info-circle mr-3 text-xl"></i>
            <div class="flex-1">
                <p class="font-medium"><%= info %></p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-blue-700 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>

<script>
    // Auto-hide alerts apÃ³s 5 segundos
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('[role="alert"]');
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        });
    });
</script>