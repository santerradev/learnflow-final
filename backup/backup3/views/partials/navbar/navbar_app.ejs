<!-- Navbar Superior da Aplicação -->
<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 fixed top-0 left-0 right-0 z-40">
    <div class="px-4 py-3 flex items-center justify-between">
        <!-- Left: Toggle Sidebar + Breadcrumb -->
        <div class="flex items-center space-x-4">
            <button 
                onclick="toggleSidebar()" 
                class="lg:block hidden text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 focus:outline-none"
            >
                <i class="fas fa-bars text-xl"></i>
            </button>
            
            <!-- Mobile Menu Toggle -->
            <button 
                onclick="toggleMobileSidebar()" 
                class="lg:hidden text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 focus:outline-none"
            >
                <i class="fas fa-bars text-xl"></i>
            </button>
            
            <!-- Breadcrumb (opcional) -->
            <div class="hidden md:block text-sm text-gray-600 dark:text-gray-400">
                <% if (typeof breadcrumb !== 'undefined' && breadcrumb) { %>
                    <%= breadcrumb %>
                <% } %>
            </div>
        </div>

        <!-- Center: Search (opcional) -->
        <div class="hidden lg:block flex-1 max-w-md mx-8">
            <div class="relative">
                <input 
                    type="text" 
                    placeholder="Buscar cursos, aulas..." 
                    class="w-full px-4 py-2 pl-10 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                >
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
        </div>

        <!-- Right: Theme Toggle + Notifications + Avatar -->
        <div class="flex items-center space-x-4">
            <!-- Theme Toggle -->
            <button 
                onclick="toggleTheme()" 
                class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 focus:outline-none"
                title="Alternar tema"
            >
                <i class="fas fa-sun text-xl dark:hidden"></i>
                <i class="fas fa-moon text-xl hidden dark:inline"></i>
            </button>

            <!-- Notifications -->
            <a 
                href="/notificacoes" 
                class="relative text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
                title="Notificações"
            >
                <i class="fas fa-bell text-xl"></i>
                <% if (typeof notificacoesNaoLidas !== 'undefined' && notificacoesNaoLidas > 0) { %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                        <%= notificacoesNaoLidas > 9 ? '9+' : notificacoesNaoLidas %>
                    </span>
                <% } %>
            </a>

            <!-- User Avatar -->
            <div class="relative" x-data="{ open: false }">
                <button 
                    @click="open = !open"
                    class="flex items-center space-x-2 focus:outline-none"
                >
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="w-10 h-10 rounded-full bg-teal-500 flex items-center justify-center text-white font-bold">
                            <%= user.nome.charAt(0).toUpperCase() %>
                        </div>
                    <% } else { %>
                        <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                            <i class="fas fa-user text-gray-600"></i>
                        </div>
                    <% } %>
                </button>

                <!-- Dropdown Menu -->
                <div 
                    x-show="open" 
                    @click.away="open = false"
                    class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg py-1 z-50"
                    style="display: none;"
                >
                    <a href="/perfil" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-user mr-2"></i> Meu Perfil
                    </a>
                    <a href="/configuracoes" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-cog mr-2"></i> Configurações
                    </a>
                    <hr class="my-1 border-gray-200 dark:border-gray-700">
                    <a href="/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-sign-out-alt mr-2"></i> Sair
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

<!-- Alpine.js para dropdown -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>