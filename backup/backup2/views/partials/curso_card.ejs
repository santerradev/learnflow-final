<!-- file: views/partials/curso_card.ejs -->

<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden flex flex-col transition-shadow duration-300 hover:shadow-xl relative">
    
    <% if (typeof usuario !== 'undefined' && usuario && (curso.usuario_id === usuario.id || usuario.tipo === 'administrador')) { %>
    <div class="absolute top-2 right-2 z-10">
        <button class="p-2 bg-black bg-opacity-30 text-white rounded-full hover:bg-opacity-50 focus:outline-none focus:ring-2 focus:ring-white" 
                onclick="event.stopPropagation(); toggleCourseMenu(this)">
            <span class="sr-only">Opções do curso</span>
            <i class="fa-solid fa-ellipsis-vertical h-5 w-5"></i>
        </button>
        <div class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5 z-20 course-menu-dropdown">
            <a href="/cursos/<%= curso.id %>/editar" class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">
                <i class="fa-solid fa-pencil fa-fw mr-2 text-gray-400"></i>Editar 
            </a>
            <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600"> 
                <i class="fa-solid fa-gear fa-fw mr-2 text-gray-400"></i>Configurações
            </a>
            <form action="/cursos/<%= curso.id %>/deletar" method="POST" 
                  onsubmit="return confirm('Tem certeza que deseja deletar este curso? Aulas e progresso dos alunos associados também serão removidos permanentemente.');" 
                  class="block"> 
                <button type="submit" class="flex items-center w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-600">
                     <i class="fa-solid fa-trash-can fa-fw mr-2"></i>Deletar 
                 </button>
            </form>
        </div>
    </div>
    <% } %>

    <a href="/cursos/<%= curso.id %>" class="block h-40 bg-gray-200 dark:bg-gray-700 group overflow-hidden relative">
        <% if (curso.capa_curso) { %>
            <img src="/uploads/images/<%= curso.capa_curso %>" alt="Capa do curso <%= curso.titulo %>" 
                 class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105">
        <% } else { %>
            <div class="h-full w-full flex items-center justify-center bg-gray-300 dark:bg-gray-600">
                 <i class="fa-solid fa-image fa-2x text-gray-400 dark:text-gray-500"></i>
            </div>
        <% } %>
         <div class="absolute inset-0 bg-black bg-opacity-10 group-hover:bg-opacity-0 transition-opacity"></div>
         
         <%# Indicador de senha %>
         <% if (curso.senha_acesso) { %>
            <div class="absolute top-2 left-2 bg-yellow-500 text-white px-2 py-1 rounded text-xs font-semibold flex items-center">
                <i class="fas fa-lock mr-1"></i> Protegido
            </div>
         <% } %>
    </a>
    
    <div class="p-5 flex-1 flex flex-col justify-between">
        <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white leading-tight">
                <a href="/cursos/<%= curso.id %>" class="hover:text-teal-600 dark:hover:text-teal-400"><%= curso.titulo %></a>
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1"><%= curso.materia %></p>
            <div class="flex items-center mt-4 text-sm text-gray-700 dark:text-gray-300">
                 <% if (curso.professor && curso.professor.foto_perfil) { %>
                    <img class="h-6 w-6 rounded-full object-cover mr-2" src="/uploads/images/<%= curso.professor.foto_perfil %>" alt="Foto do Prof. <%= curso.professor.nome %>">
                <% } else if (curso.professor) { %>
                    <span class="h-6 w-6 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 flex items-center justify-center font-semibold text-xs mr-2">
                        <%= curso.professor.nome ? curso.professor.nome.charAt(0).toUpperCase() : '?' %>
                    </span>
                 <% } else { %>
                      <span class="h-6 w-6 rounded-full bg-gray-200 dark:bg-gray-700 mr-2"></span>
                 <% } %>
                Prof. <%= curso.professor ? curso.professor.nome : 'Desconhecido' %>
            </div>
        </div>
        
        <%# Verifica se o usuário está inscrito %>
        <% 
        const estaInscrito = typeof curso.inscricoes !== 'undefined' && curso.inscricoes.some(i => i.usuario_id === usuario.id);
        const eDonoDoCurso = usuario && curso.usuario_id === usuario.id;
        %>
        
        <div class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
            <% if (eDonoDoCurso || (usuario && usuario.tipo === 'administrador')) { %>
                <%# Dono do curso ou Admin %>
                <a href="/cursos/<%= curso.id %>" 
                   class="w-full flex justify-center items-center px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 transition duration-200">
                    <i class="fas fa-cog mr-2"></i> Gerenciar Curso
                </a>
            <% } else if (estaInscrito) { %>
                <%# Já está inscrito %>
                <a href="/cursos/<%= curso.id %>" 
                   class="w-full flex justify-center items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 transition duration-200">
                    <i class="fas fa-book-open mr-2"></i> Acessar Curso
                </a>
            <% } else { %>
                <%# Não está inscrito %>
                <button 
                    onclick="inscreverCurso(<%= curso.id %>, <%= curso.senha_acesso ? 'true' : 'false' %>)"
                    class="w-full flex justify-center items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600 transition duration-200">
                    <i class="fas fa-user-plus mr-2"></i> Inscrever-se
                </button>
            <% } %>
        </div>
    </div>
</div>

<script>
function toggleCourseMenu(button) {
    const dropdown = button.nextElementSibling;
    if (dropdown) {
        const isHidden = dropdown.classList.contains('hidden');
        document.querySelectorAll('.course-menu-dropdown:not(.hidden)').forEach(menu => {
            if (menu !== dropdown) {
                menu.classList.add('hidden');
            }
        });
        dropdown.classList.toggle('hidden', !isHidden); 
    }
}

document.addEventListener('click', function closeAllCourseMenus(event) {
    const visibleDropdowns = document.querySelectorAll('.course-menu-dropdown:not(.hidden)');
    let clickedInsideAMenuOrButton = false;
    visibleDropdowns.forEach(dropdown => {
        const button = dropdown.previousElementSibling;
        if ((button && button.contains(event.target)) || dropdown.contains(event.target)) {
            clickedInsideAMenuOrButton = true;
        }
    });
    if (!clickedInsideAMenuOrButton) {
         visibleDropdowns.forEach(menu => {
             menu.classList.add('hidden');
         });
    }
}, true); 

async function inscreverCurso(cursoId, temSenha) {
    if (temSenha) {
        // Abrir modal para pedir senha
        const senha = prompt('Este curso é protegido por senha. Digite a senha de acesso:');
        if (!senha) return;
        
        try {
            const response = await fetch(`/inscricoes/${cursoId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ senha_acesso: senha })
            });
            
            if (response.ok) {
                window.location.reload();
            } else {
                const data = await response.json();
                alert(data.error || 'Senha incorreta!');
            }
        } catch (error) {
            console.error('Erro:', error);
            alert('Erro ao processar inscrição.');
        }
    } else {
        // Inscrição sem senha
        try {
            const response = await fetch(`/inscricoes/${cursoId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            if (response.ok) {
                window.location.reload();
            } else {
                const data = await response.json();
                alert(data.error || 'Erro ao processar inscrição.');
            }
        } catch (error) {
            console.error('Erro:', error);
            alert('Erro ao processar inscrição.');
        }
    }
}
</script>