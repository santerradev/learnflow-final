<script>
// ========================================
// SISTEMA DE NOTIFICA√á√ïES
// ========================================

let notificacoesAbertas = false;

// Carregar contador ao iniciar
document.addEventListener('DOMContentLoaded', () => {
  atualizarContador();
  // Atualizar a cada 30 segundos
  setInterval(atualizarContador, 30000);
});

// Atualizar contador de n√£o lidas
async function atualizarContador() {
  try {
    const res = await fetch('/api/notificacoes/count');
    const data = await res.json();
    
    const badge = document.getElementById('notif-badge');
    if (data.count > 0) {
      badge.textContent = data.count > 99 ? '99+' : data.count;
      badge.classList.remove('hidden');
    } else {
      badge.classList.add('hidden');
    }
  } catch (error) {
    console.error('Erro ao atualizar contador:', error);
  }
}

// Toggle dropdown
async function toggleNotificacoes() {
  const dropdown = document.getElementById('notif-dropdown');
  notificacoesAbertas = !notificacoesAbertas;
  
  if (notificacoesAbertas) {
    dropdown.classList.remove('hidden');
    await carregarNotificacoes();
  } else {
    dropdown.classList.add('hidden');
  }
}

// Carregar notifica√ß√µes
async function carregarNotificacoes() {
  try {
    const res = await fetch('/api/notificacoes?limite=10');
    const data = await res.json();
    
    const lista = document.getElementById('lista-notificacoes');
    
    if (data.notificacoes.length === 0) {
      lista.innerHTML = `
        <div class="p-8 text-center text-gray-500">
          <p>Nenhuma notifica√ß√£o</p>
        </div>
      `;
      return;
    }
    
    lista.innerHTML = data.notificacoes.map(notif => `
      <div class="px-4 py-3 hover:bg-gray-50 border-b ${!notif.lida ? 'bg-blue-50' : ''}" 
           onclick="abrirNotificacao(${notif.id}, '${notif.link || '#'}')">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <div class="flex items-center gap-2">
              ${getIconeNotificacao(notif.tipo)}
              <h4 class="font-semibold text-sm text-gray-900">${notif.titulo}</h4>
              ${!notif.lida ? '<span class="w-2 h-2 bg-blue-500 rounded-full"></span>' : ''}
            </div>
            <p class="text-sm text-gray-600 mt-1">${notif.mensagem}</p>
            <p class="text-xs text-gray-400 mt-1">${formatarData(notif.criado_em)}</p>
          </div>
          <button onclick="deletarNotificacao(event, ${notif.id})" 
                  class="text-gray-400 hover:text-red-500 ml-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    `).join('');
    
  } catch (error) {
    console.error('Erro ao carregar notifica√ß√µes:', error);
  }
}

// Abrir notifica√ß√£o
async function abrirNotificacao(id, link) {
  try {
    await fetch(`/api/notificacoes/${id}/ler`, { method: 'PUT' });
    atualizarContador();
    
    if (link && link !== '#') {
      window.location.href = link;
    }
  } catch (error) {
    console.error('Erro ao marcar notifica√ß√£o:', error);
  }
}

// Marcar todas como lidas
async function marcarTodasLidas() {
  try {
    const res = await fetch('/api/notificacoes/ler-todas', { method: 'PUT' });
    const data = await res.json();
    
    if (data.success) {
      await carregarNotificacoes();
      atualizarContador();
    }
  } catch (error) {
    console.error('Erro ao marcar todas:', error);
  }
}

// Limpar lidas
async function limparLidas() {
  if (!confirm('Deseja remover todas as notifica√ß√µes j√° lidas?')) return;
  
  try {
    const res = await fetch('/api/notificacoes/limpar-lidas', { method: 'DELETE' });
    const data = await res.json();
    
    if (data.success) {
      await carregarNotificacoes();
      atualizarContador();
    }
  } catch (error) {
    console.error('Erro ao limpar notifica√ß√µes:', error);
  }
}

// Deletar notifica√ß√£o espec√≠fica
async function deletarNotificacao(event, id) {
  event.stopPropagation();
  
  try {
    const res = await fetch(`/api/notificacoes/${id}`, { method: 'DELETE' });
    const data = await res.json();
    
    if (data.success) {
      await carregarNotificacoes();
      atualizarContador();
    }
  } catch (error) {
    console.error('Erro ao deletar notifica√ß√£o:', error);
  }
}

// √çcones por tipo
function getIconeNotificacao(tipo) {
  const icones = {
    'curso': 'üìö',
    'atividade': 'üìù',
    'prazo': '‚è∞',
    'mural': 'üí¨',
    'sistema': '‚ÑπÔ∏è',
    'sucesso': '‚úÖ',
    'alerta': '‚ö†Ô∏è'
  };
  return icones[tipo] || '‚ÑπÔ∏è';
}

// Formatar data
function formatarData(data) {
  const agora = new Date();
  const dataNotif = new Date(data);
  const diffMs = agora - dataNotif;
  const diffMins = Math.floor(diffMs / 60000);
  const diffHoras = Math.floor(diffMs / 3600000);
  const diffDias = Math.floor(diffMs / 86400000);
  
  if (diffMins < 1) return 'Agora';
  if (diffMins < 60) return `${diffMins}min atr√°s`;
  if (diffHoras < 24) return `${diffHoras}h atr√°s`;
  if (diffDias < 7) return `${diffDias}d atr√°s`;
  
  return dataNotif.toLocaleDateString('pt-BR');
}

// Fechar dropdown ao clicar fora
document.addEventListener('click', (e) => {
  const dropdown = document.getElementById('notificacoes-dropdown');
  if (!dropdown.contains(e.target)) {
    document.getElementById('notif-dropdown').classList.add('hidden');
    notificacoesAbertas = false;
  }
});

// Toggle perfil (manter fun√ß√£o existente)
function toggleProfile() {
  const menu = document.getElementById('profile-menu');
  menu.classList.toggle('hidden');
}
</script>