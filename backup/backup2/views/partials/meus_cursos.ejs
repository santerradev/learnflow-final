<%- include('../partials/header_app') %>

<div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Meus Cursos</h1>
        <p class="text-sm text-gray-600 dark:text-gray-400">Gerencie todos os seus cursos em um só lugar</p>
    </div>
    
    <% if (usuario && (usuario.tipo === 'professor' || usuario.tipo === 'administrador')) { %>
        <button 
            onclick="openModalCriarCurso()"
            class="w-full md:w-auto flex justify-center items-center px-4 py-2 bg-teal-600 text-white rounded-md shadow-sm hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition duration-200">
            <i class="fas fa-plus h-5 w-5 mr-2"></i>
            Criar Curso
        </button>
    <% } %>
</div>

<div class="mb-6 bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
    <div class="relative mb-4">
        <input 
            type="text" 
            placeholder="Buscar cursos..." 
            id="search-input"
            class="border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 w-full pl-10 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent placeholder-gray-400 dark:placeholder-gray-500">
        <i class="fas fa-magnifying-glass h-5 w-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2"></i>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="border border-gray-300 dark:border-gray-700 rounded-lg p-1 flex space-x-1 bg-gray-100 dark:bg-gray-900 w-full md:w-auto">
            <button class="px-4 py-2 text-sm font-medium rounded-md bg-white dark:bg-gray-700 text-teal-700 dark:text-white shadow">
                Todos
            </button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700">
                Lecionando
            </button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700">
                Matriculado
            </button>
        </div>
        
        <div class="flex space-x-2">
            <button class="p-2 rounded-md bg-white dark:bg-gray-700 text-teal-600 dark:text-white shadow focus:outline-none focus:ring-2 focus:ring-teal-500">
                <i class="fas fa-table-cells-large h-5 w-5"></i>
            </button>
            <button class="p-2 rounded-md bg-gray-100 dark:bg-gray-900 text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-teal-500">
                <i class="fas fa-bars h-5 w-5"></i>
            </button>
        </div>
    </div>
</div>

<% if (cursos.length === 0) { %>
    <div class="text-center text-gray-500 dark:text-gray-400 mt-20 bg-white dark:bg-gray-800 p-12 rounded-lg shadow">
        <i class="fas fa-graduation-cap text-6xl mb-4 text-gray-300 dark:text-gray-600"></i>
        <p class="text-xl font-semibold">Nenhum curso encontrado.</p>
        <p class="mt-2">Comece criando seu primeiro curso ou inscreva-se em um existente!</p>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="cursos-container">
        <% cursos.forEach(curso => { %>
            <%- include('../partials/curso_card', { curso: curso }) %>
        <% }) %>
    </div>
<% } %>

<!-- Modal Criar Curso -->
<div id="modalCriarCurso" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 px-6 py-4 flex justify-between items-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Criar Novo Curso</h2>
            <button onclick="closeModalCriarCurso()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>

        <form id="formCriarCurso" enctype="multipart/form-data" class="p-6 space-y-6">
            <div id="modalError" class="hidden bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-lg"></div>

            <div>
                <label for="titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Título do Curso *
                </label>
                <input 
                    type="text" 
                    id="titulo" 
                    name="titulo" 
                    required
                    placeholder="Ex: Matemática Avançada"
                    class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent">
            </div>

            <div>
                <label for="materia" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Matéria / Turma *
                </label>
                <input 
                    type="text" 
                    id="materia" 
                    name="materia" 
                    required
                    placeholder="Ex: 3º Ano - Turma A"
                    class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent">
            </div>

            <div>
                <label for="descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Descrição Completa
                </label>
                <textarea 
                    id="descricao" 
                    name="descricao" 
                    rows="4"
                    placeholder="Descreva o que os alunos aprenderão neste curso..."
                    class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent"></textarea>
            </div>

            <div>
                <label for="senha_acesso" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Senha de Acesso (Opcional)
                </label>
                <input 
                    type="text" 
                    id="senha_acesso" 
                    name="senha_acesso" 
                    maxlength="5"
                    placeholder="Máx 5 caracteres, sem espaços"
                    class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent">
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    <i class="fas fa-info-circle"></i>
                    Deixe em branco para permitir inscrição livre. Máximo de 5 caracteres sem espaços.
                </p>
            </div>

            <div>
                <label for="capa_curso" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Capa do Curso *
                </label>
                <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-lg hover:border-teal-500 transition duration-200">
                    <div class="space-y-1 text-center">
                        <i class="fas fa-cloud-upload-alt text-4xl text-gray-400"></i>
                        <div class="flex text-sm text-gray-600 dark:text-gray-400">
                            <label for="capa_curso" class="relative cursor-pointer rounded-md font-medium text-teal-600 hover:text-teal-500 focus-within:outline-none">
                                <span>Escolher arquivo</span>
                                <input 
                                    id="capa_curso" 
                                    name="capa_curso" 
                                    type="file" 
                                    accept="image/*" 
                                    required
                                    onchange="previewImage(this)"
                                    class="sr-only">
                            </label>
                            <p class="pl-1">ou arraste e solte</p>
                        </div>
                        <p class="text-xs text-gray-500">PNG, JPG até 10MB</p>
                        <div id="preview-container" class="hidden mt-4">
                            <img id="preview-image" class="max-h-48 rounded-lg mx-auto shadow-lg" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <button 
                    type="button"
                    onclick="closeModalCriarCurso()"
                    class="px-6 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                    Cancelar
                </button>
                <button 
                    type="submit"
                    id="btnSubmitCurso"
                    class="px-6 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-check mr-2"></i>
                    Criar Curso
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function openModalCriarCurso() {
    document.getElementById('modalCriarCurso').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeModalCriarCurso() {
    document.getElementById('modalCriarCurso').classList.add('hidden');
    document.getElementById('formCriarCurso').reset();
    document.getElementById('preview-container').classList.add('hidden');
    document.getElementById('modalError').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

function previewImage(input) {
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('preview-image').src = e.target.result;
            document.getElementById('preview-container').classList.remove('hidden');
        };
        reader.readAsDataURL(input.files[0]);
    }
}

document.getElementById('formCriarCurso').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const btn = document.getElementById('btnSubmitCurso');
    const errorDiv = document.getElementById('modalError');
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Criando...';
    errorDiv.classList.add('hidden');
    
    const formData = new FormData(e.target);
    
    try {
        const response = await fetch('/cursos/novo', {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        
        if (response.ok) {
            window.location.reload();
        } else {
            errorDiv.textContent = data.error || 'Erro ao criar curso';
            errorDiv.classList.remove('hidden');
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-check mr-2"></i> Criar Curso';
        }
    } catch (error) {
        console.error('Erro:', error);
        errorDiv.textContent = 'Erro ao conectar com o servidor';
        errorDiv.classList.remove('hidden');
        btn.disabled = false;
        btn.innerHTML = '<i class="fas fa-check mr-2"></i> Criar Curso';
    }
});

// Validação de senha de acesso (sem espaços)
document.getElementById('senha_acesso').addEventListener('input', function(e) {
    e.target.value = e.target.value.replace(/\s/g, '');
});
</script>

<%- include('../partials/footer_app') %>