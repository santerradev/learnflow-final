<!-- file: views/plataforma/detalhes_curso.ejs -->
<%- include('../partials/header_app') %>

<!-- Header do Curso -->
<div class="bg-gradient-to-r from-teal-600 to-teal-700 dark:from-teal-700 dark:to-teal-900 rounded-lg shadow-lg p-8 mb-6 text-white">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div class="flex-1">
            <h1 class="text-3xl font-bold mb-2"><%= curso.titulo %></h1>
            <p class="text-teal-100 text-lg mb-4"><%= curso.materia %></p>
            <div class="flex items-center">
                <% if (curso.professor.foto_perfil) { %>
                    <img class="h-10 w-10 rounded-full object-cover mr-3 border-2 border-white" 
                         src="/uploads/images/<%= curso.professor.foto_perfil %>" 
                         alt="<%= curso.professor.nome %>">
                <% } else { %>
                    <span class="h-10 w-10 rounded-full bg-white text-teal-700 flex items-center justify-center font-semibold mr-3">
                        <%= curso.professor.nome.charAt(0).toUpperCase() %>
                    </span>
                <% } %>
                <span class="font-medium">Prof. <%= curso.professor.nome %></span>
            </div>
        </div>
        
        <% if (eDono || eAdmin) { %>
            <button 
                onclick="openModalNovoConteudo()"
                class="flex items-center px-4 py-2 bg-white text-teal-700 rounded-lg hover:bg-teal-50 transition duration-200 shadow-lg">
                <i class="fas fa-plus mr-2"></i>
                Adicionar Conteúdo
            </button>
        <% } %>
    </div>
</div>

<!-- Navbar de Abas -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6 overflow-x-auto">
    <nav class="flex border-b border-gray-200 dark:border-gray-700">
        <a href="/cursos/<%= curso.id %>?aba=mural" 
           class="<%= aba === 'mural' ? 'border-b-2 border-teal-500 text-teal-600 dark:text-teal-400' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200' %> 
                  px-6 py-4 font-medium text-sm whitespace-nowrap transition duration-200">
            <i class="fas fa-comments mr-2"></i>Mural
        </a>
        <a href="/cursos/<%= curso.id %>?aba=aulas" 
           class="<%= aba === 'aulas' ? 'border-b-2 border-teal-500 text-teal-600 dark:text-teal-400' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200' %> 
                  px-6 py-4 font-medium text-sm whitespace-nowrap transition duration-200">
            <i class="fas fa-video mr-2"></i>Aulas
        </a>
        <a href="/cursos/<%= curso.id %>?aba=atividades" 
           class="<%= aba === 'atividades' ? 'border-b-2 border-teal-500 text-teal-600 dark:text-teal-400' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200' %> 
                  px-6 py-4 font-medium text-sm whitespace-nowrap transition duration-200">
            <i class="fas fa-clipboard-list mr-2"></i>Atividades
        </a>
        <a href="/cursos/<%= curso.id %>?aba=materiais" 
           class="<%= aba === 'materiais' ? 'border-b-2 border-teal-500 text-teal-600 dark:text-teal-400' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200' %> 
                  px-6 py-4 font-medium text-sm whitespace-nowrap transition duration-200">
            <i class="fas fa-folder-open mr-2"></i>Materiais
        </a>
        <a href="/cursos/<%= curso.id %>?aba=pessoas" 
           class="<%= aba === 'pessoas' ? 'border-b-2 border-teal-500 text-teal-600 dark:text-teal-400' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200' %> 
                  px-6 py-4 font-medium text-sm whitespace-nowrap transition duration-200">
            <i class="fas fa-users mr-2"></i>Pessoas
        </a>
    </nav>
</div>

<!-- Grid Layout: Conteúdo + Sidebar -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- Conteúdo Principal -->
    <div class="lg:col-span-2 space-y-6">
        <% if (aba === 'mural') { %>
            <%- include('./curso_abas/mural', { publicacoes: dadosAba.publicacoes, curso, usuario, eDono, eAdmin }) %>
        <% } else if (aba === 'aulas') { %>
            <%- include('./curso_abas/aulas', { listas: curso.listas, curso, eDono, eAdmin }) %>
        <% } else if (aba === 'atividades') { %>
            <%- include('./curso_abas/atividades', { listas: curso.listas, curso, eDono, eAdmin }) %>
        <% } else if (aba === 'materiais') { %>
            <%- include('./curso_abas/materiais', { listas: curso.listas, curso, eDono, eAdmin }) %>
        <% } else if (aba === 'pessoas') { %>
            <%- include('./curso_abas/pessoas', { participantes: dadosAba.participantes, professor: curso.professor, eDono, eAdmin }) %>
        <% } %>
    </div>

    <!-- Sidebar: Informações do Curso -->
    <div class="lg:col-span-1">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 sticky top-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                Informações do Curso
            </h3>
            
            <!-- Professor -->
            <div class="flex items-center mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                <% if (curso.professor.foto_perfil) { %>
                    <img class="h-12 w-12 rounded-full object-cover mr-3" 
                         src="/uploads/images/<%= curso.professor.foto_perfil %>" 
                         alt="<%= curso.professor.nome %>">
                <% } else { %>
                    <span class="h-12 w-12 rounded-full bg-teal-100 dark:bg-teal-700 text-teal-700 dark:text-teal-100 flex items-center justify-center font-semibold text-lg mr-3">
                        <%= curso.professor.nome.charAt(0).toUpperCase() %>
                    </span>
                <% } %>
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Instrutor</p>
                    <p class="font-medium text-gray-900 dark:text-white"><%= curso.professor.nome %></p>
                </div>
            </div>

            <!-- Estatísticas -->
            <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="text-center">
                    <div class="flex items-center justify-center mb-1">
                        <i class="fas fa-video text-teal-600 dark:text-teal-400 mr-1"></i>
                        <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= progresso.totalAulas %></span>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">aulas</p>
                </div>
                <div class="text-center">
                    <div class="flex items-center justify-center mb-1">
                        <i class="fas fa-clipboard-list text-teal-600 dark:text-teal-400 mr-1"></i>
                        <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= progresso.totalAtividades %></span>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">atividades</p>
                </div>
            </div>

            <% if (estaInscrito) { %>
                <!-- Progresso -->
                <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                            <i class="fas fa-chart-line mr-1"></i>Progresso do Curso
                        </span>
                        <span class="text-sm font-bold text-teal-600 dark:text-teal-400">
                            <%= progresso.porcentagem %>%
                        </span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 overflow-hidden">
                        <div class="bg-teal-600 dark:bg-teal-500 h-2 rounded-full transition-all duration-300" 
                             style="width: <%= progresso.porcentagem %>%"></div>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                        <%= progresso.aulasCompletas %> de <%= progresso.totalAulas %> aulas concluídas
                    </p>
                </div>

                <!-- Estatísticas de Progresso -->
                <div class="space-y-3">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">Aulas concluídas:</span>
                        <span class="font-semibold text-gray-900 dark:text-white">
                            <%= progresso.aulasCompletas %>/<%= progresso.totalAulas %>
                        </span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">Atividades feitas:</span>
                        <span class="font-semibold text-gray-900 dark:text-white">
                            <%= progresso.atividadesCompletas %>/<%= progresso.totalAtividades %>
                        </span>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Modal Adicionar Conteúdo (Lista/Aula/Atividade/Material) -->
<% if (eDono || eAdmin) { %>
    <%- include('./modals/adicionar_conteudo', { curso }) %>
<% } %>

<%- include('../partials/footer_app') %>