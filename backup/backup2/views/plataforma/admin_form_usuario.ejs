<!-- file: views/plataforma/admin_form_usuario.ejs -->

<%- include('../partials/header_app') %>

<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Editar Usuário</h1>
    <p class="text-sm text-gray-600 dark:text-gray-400">Modifique as informações do usuário abaixo.</p>
</div>

<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6 md:p-8">
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"> <%= error %> </div>
    <% } %>

    <form action="/admin/usuarios/<%= usuarioEditando.id %>/editar" method="POST" enctype="multipart/form-data" class="space-y-6">

        <div>
            <label for="nome" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nome Completo</label>
            <input type="text" id="nome" name="nome" required value="<%= usuarioEditando.nome %>" 
                   class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-teal-500 focus:border-teal-500">
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
            <input type="email" id="email" name="email" required value="<%= usuarioEditando.email %>" 
                   class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-teal-500 focus:border-teal-500">
        </div>

        <div>
            <label for="tipo" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Tipo de Usuário</label>
            <select id="tipo" name="tipo" 
                    class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-teal-500 focus:border-teal-500"
                    <% if (typeof locals.usuario !== 'undefined' && usuarioEditando.id === locals.usuario.id) { %> disabled <% } %>> 
                <option value="aluno" <%= usuarioEditando.tipo === 'aluno' ? 'selected' : '' %>>Aluno</option>
                <option value="professor" <%= usuarioEditando.tipo === 'professor' ? 'selected' : '' %>>Professor</option>
                <option value="administrador" <%= usuarioEditando.tipo === 'administrador' ? 'selected' : '' %>>Administrador</option>
            </select>
             <% if (typeof locals.usuario !== 'undefined' && usuarioEditando.id === locals.usuario.id) { %>
                 <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Você não pode alterar seu próprio tipo.</p>
                 <input type="hidden" name="tipo" value="<%= usuarioEditando.tipo %>">
             <% } %>
        </div>

         <div>
            <label for="status" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Status</label>
            <select id="status" name="status" 
                    class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-teal-500 focus:border-teal-500"
                    <% if (typeof locals.usuario !== 'undefined' && usuarioEditando.id === locals.usuario.id) { %> disabled <% } %>> 
                <option value="ativo" <%= usuarioEditando.status === 'ativo' ? 'selected' : '' %>>Ativo</option>
                <option value="inativo" <%= usuarioEditando.status === 'inativo' ? 'selected' : '' %>>Inativo</option>
            </select>
             <% if (typeof locals.usuario !== 'undefined' && usuarioEditando.id === locals.usuario.id) { %>
                 <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Você não pode desativar sua própria conta.</p>
                 <input type="hidden" name="status" value="<%= usuarioEditando.status %>">
             <% } %>
        </div>

        <div>
            <label for="nova_senha" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nova Senha (Opcional)</label>
            <input type="password" id="nova_senha" name="nova_senha" 
                   placeholder="Deixe em branco para manter a senha atual"
                   class="mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm dark:bg-gray-700 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-teal-500 focus:border-teal-500">
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Foto de Perfil (Opcional: Mudar)
            </label>
            <% if (usuarioEditando.foto_perfil) { %>
                <div class="mt-2 mb-2">
                    <p class="text-xs text-gray-500 dark:text-gray-400">Foto atual:</p>
                    <img src="/uploads/images/<%= usuarioEditando.foto_perfil %>" alt="Foto atual" class="mt-1 h-20 w-auto rounded shadow-sm">
                </div>
            <% } %>
            <input type="file" id="foto_perfil" name="foto_perfil" accept="image/*" class="hidden"
                   onchange="document.getElementById('file-chosen-foto').textContent = this.files[0] ? this.files[0].name : 'Nenhuma nova foto selecionada'">
            <div class="mt-2 flex items-center">
                <label for="foto_perfil" class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-teal-500">
                    <i class="fa-solid fa-upload mr-2 h-4 w-4 text-gray-500 dark:text-gray-400"></i>
                    Escolher nova foto
                </label>
                <span id="file-chosen-foto" class="ml-3 text-sm text-gray-500 dark:text-gray-400 truncate">Nenhuma nova foto selecionada</span>
            </div>
        </div>

        <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-gray-700">
            <a href="/admin/usuarios" 
               class="px-6 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
               Cancelar 
            </a>
            <button type="submit" 
                    class="px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                Salvar Alterações
            </button>
        </div>
    </form>
</div>

<%- include('../partials/footer_app') %>