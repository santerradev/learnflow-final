<%- include('../partials/header_app') %>
<div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Meus Cursos</h1>
        <p class="text-sm text-gray-600 dark:text-gray-400">Gerencie todos os seus cursos em um sรณ lugar</p>
    </div>
    <% if (usuario && (usuario.tipo === 'professor' || usuario.tipo === 'administrador')) { %>
        <a href="/cursos/novo" class="w-full md:w-auto flex justify-center items-center px-4 py-2 bg-teal-600 text-white rounded-md shadow-sm hover:bg-teal-700 dark:bg-teal-500 dark:hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
            <i class="fa-solid fa-plus h-5 w-5 mr-2"></i>
            Criar Curso
        </a>
    <% } %>
</div>
<div class="mb-6 bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
    <div class="relative mb-4">
        <input type="text" placeholder="Buscar cursos..." 
               class="border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 w-full pl-10 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent placeholder-gray-400 dark:placeholder-gray-500">
        <i class="fa-solid fa-magnifying-glass h-5 w-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2"></i>
    </div>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="border border-gray-300 dark:border-gray-700 rounded-lg p-1 flex space-x-1 bg-gray-100 dark:bg-gray-900">
            <button class="px-4 py-2 text-sm font-medium rounded-md bg-white dark:bg-gray-700 text-teal-700 dark:text-white shadow">Todos</button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700">Lecionando</button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700">Matriculado</button>
        </div>
        <div class="flex space-x-2">
            <button class="p-2 rounded-md bg-white dark:bg-gray-700 text-teal-600 dark:text-white shadow focus:outline-none focus:ring-2 focus:ring-teal-500">
                <i class="fa-solid fa-table-cells-large h-5 w-5"></i>
            </button>
            <button class="p-2 rounded-md bg-gray-100 dark:bg-gray-900 text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-teal-500">
                <i class="fa-solid fa-bars h-5 w-5"></i>
            </button>
        </div>
    </div>
</div>
<% if (cursos.length === 0) { %>
    <div class="text-center text-gray-500 dark:text-gray-400 mt-20">
        <p>Nenhum curso encontrado.</p>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% cursos.forEach(curso => { %>
            <%- include('../partials/curso_card', { curso: curso }) %>
        <% }) %>
    </div>
<% } %>
<%- include('../partials/footer_app') %>